<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="eus.ehu.cinemaProject.ui.ReviewsController"
            prefWidth="600" prefHeight="400" style="-fx-background-color: #242424;">

    <children>
        <!-- Título principal -->
        <Label layoutX="25.0" layoutY="20.0" text="Reviews" textFill="WHITE">
            <font>
                <Font name="System Bold" size="26.0" />
            </font>
        </Label>

        <!-- Contenedor de reseñas -->
        <VBox fx:id="reviewsContainer" layoutX="25.0" layoutY="70.0" spacing="20.0" prefWidth="550.0">
            <!-- Aquí se insertarán dinámicamente las reseñas -->
        </VBox>
    </children>
</AnchorPane>
