<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: #242424;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.ehu.cinemaProject.ui.Customer.ReviewsController">

    <children>
        <!-- Título principal -->
        <Label layoutX="25.0" layoutY="20.0" text="Reviews" textFill="WHITE">
            <font>
                <Font name="System Bold" size="26.0" />
            </font>
        </Label>

        <!-- Contenedor de reseñas -->
        <VBox fx:id="reviewsContainer" layoutX="25.0" layoutY="70.0" prefWidth="550.0" spacing="20.0">
            <!-- Aquí se insertarán dinámicamente las reseñas -->
        </VBox>

        <Button alignment="CENTER" layoutX="173.0" layoutY="351.0" mnemonicParsing="false" onAction="#goBack" prefHeight="35.0" prefWidth="255.0" style="-fx-background-color: #dd6600; -fx-cursor: hand;" text="Go back" textFill="WHITE" />

    </children>
</AnchorPane>
