<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #242424;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.ehu.cinemaProject.ui.Admin.ManageWorkersController">
    <children>
        <!-- Encabezado con tÃ­tulo y botones -->
        <HBox layoutX="36.0" layoutY="20.0" prefHeight="27.0" prefWidth="364.0" spacing="15">
            <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="%mainLabel" textFill="white" />
            <Button mnemonicParsing="false" onAction="#goBack" style="-fx-background-color: #dd6600; -fx-text-fill: white; -fx-background-radius: 5;" text="%backB3" />
            <Button mnemonicParsing="false" onAction="#addWorker" style="-fx-background-color: #dd6600; -fx-text-fill: white; -fx-background-radius: 5;" text="%hireB" />
        </HBox>

        <!-- ScrollPane para la lista de trabajadores -->
        <ScrollPane fitToWidth="true" layoutX="36.0" layoutY="70.0" prefHeight="500.0" prefWidth="730.0" style="-fx-background-color: transparent;">
            <content>
                <VBox fx:id="workersContainer" spacing="15" style="-fx-padding: 10;" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
