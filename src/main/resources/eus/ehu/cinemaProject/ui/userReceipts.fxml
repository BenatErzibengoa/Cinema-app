<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="eus.ehu.cinemaProject.ui.Customer.UserReceiptsController"
            style="-fx-background-color: #242424;">

    <children>
        <Label layoutX="36.0" layoutY="20.0" text="Receipts" textFill="white"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <ScrollPane layoutX="36.0" layoutY="70.0" prefWidth="730.0" prefHeight="470.0"
                    fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox fx:id="receiptsContainer" spacing="15" style="-fx-padding: 10;" />
            </content>
        </ScrollPane>

        <Button layoutX="36.0" layoutY="550.0" text="%back" onAction="#goBack"
                style="-fx-background-color: #dd6600; -fx-text-fill: white; -fx-background-radius: 5;" />
    </children>
</AnchorPane>
